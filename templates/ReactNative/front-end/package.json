/*
path: package.json
completePath: front-end/package.json
unique_id: GFoENpEW
*/
{% set version = insert_setting('version') | default("1.0.0") %}
{
  "name": "{{ application.settings.name | lower | friendly }}",
  "version": "{{ version }}",
  "private": "true",
  "description": "{{ application.settings.description | default(application.settings.name) }}",
  "main": "index.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web"
    {% set npmScripts = insert_setting('npmScripts') %}
    {% if npmScripts %},{{ insert_setting('npmScripts') | raw }}{% endif %}
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "axios": "^1.4.0",
    "expo": "^54.0.12",
    "expo-asset": "^12.0.9",
    "expo-build-properties": "^1.0.9",
    "expo-font": "^14.0.8",
    "expo-image-picker": "^17.0.8",
    "expo-status-bar": "^3.0.8",
    "immer": "^10.0.2",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-paper": "^5.8.0",
    "react-native-reanimated": "^4.1.2",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-vector-icons": "^10.0.3",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "redux-observable": "^2.0.0",
    {{ insert_setting('Packages') | raw }}
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    {{ insert_setting('DevPackages') | raw }}
    "@babel/core": "^7.20.0",
    "@babel/runtime": "^7.28.4",
    "@react-native/babel-preset": "^0.73.21",
    "@react-native/metro-babel-transformer": "^0.73.15",
    "@types/react": "^19.1.17",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "babel-preset-expo": "^54.0.3",
    "react-native-gradle-plugin": "^0.71.19",
    "react-native-sass-transformer": "^3.0.0",
    "sass": "^1.69.5",
    "typescript": "^5.9.3"
  }
}
